= render '/videos/header'
- breadcrumb :talk
= render "layouts/breadcrumbs"

.show-page
  .main
    -# .breadcrumbs
    -#   = link_to 'TopPage', root_path
    -#   >>
    -#   = link_to 'view&talk', video_talks_path(@video)
    .main-title
      = @video.title

    .main-top
      .main-video
        - if @video.id == 1
          = video_tag 'kimetu.mp4', type: "videos/mp4", controls: true, autoplay: false, muted: true, class: 'video-view'
        - elsif @video.id == 2
          = video_tag 'chihaya.mp4', type: "videos/mp4", controls: true, autoplay: false, muted: true, class: 'video-view'
        - elsif @video.id == 3
          = video_tag 'kimiuso.mp4', type: "videos/mp4", controls: true, autoplay: false, muted: true, class: 'video-view'
        - elsif @video.id == 4
          = video_tag 'bakemono.mp4', type: "videos/mp4", controls: true, autoplay: false, muted: true, class: 'video-view'
        - elsif @video.id == 5
          = video_tag 'blacklagoon.mp4', type: "videos/mp4", controls: true, autoplay: false, muted: true, class: 'video-view'
        - elsif @video.id == 6
          = video_tag 'eureka.mp4', type: "videos/mp4", controls: true, autoplay: false, muted: true, class: 'video-view'
        - elsif @video.id == 7
          = video_tag 'fatest2.mp4', type: "videos/mp4", controls: true, autoplay: false, muted: true, class: 'video-view'
  
      .main-comments
        .form
          = form_for [@video, @talk] do |f|
            = f.text_field :comment, placeholder: 'type a commment', class: 'form-textarea'
            = f.submit 'send', class: 'form-submit'
       
        .comment-area
          .comments
            -@talks.each do |talk|
              .comment{data: {talk: { id: talk.id }}}
                .comment__name
                  = talk.user.name
                .comment__text
                  = talk.comment

= render 'videos/footer'