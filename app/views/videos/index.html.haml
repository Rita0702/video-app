.top-page
  = render 'header'

  .main
    .breadcrumbs
      = link_to 'TopPage', root_path
    .main-top 
      .main-top__title
        = @video.title
        = link_to image_tag(image_for_video_path(@video.id), alt: @video.title, class: 'main-top__image'), video_talks_path(@video.id)
        -# = video_tag 'kimetu.mp4', type: "videos/mp4", controls: true, autoplay: false, muted: true, class: 'video-view'
      
    .main-contents
      %ul.main-card
        %li.main-card__list
          - @videos.each do |video|
            = link_to image_tag(image_for_video_path(video.id), class: 'main-card__list--image'), video_talks_path(video.id)
            -# .main-card__list--title
            -#   = video.title

    = render 'footer'